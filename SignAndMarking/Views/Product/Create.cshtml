                        <input asp-for="Description" class="form-control">
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row mt-3">
                    <div class="col-5">
                        <p class="h5">Image</p>
                    </div>
                    <div class="col-7">
                        <input type="file" name="files" id="uploadBox" multiple asp-for="Image" class="form-control">
                    </div>
                </div>
                
                <div class="form-group row mt-3">
                    <div class="col-5">
                        <label asp-for="CategoryId" class="h5">Категорія</label>
                    </div>
                    <div class="col-7">
                        <select asp-for="CategoryId" asp-items=@ViewBag.CategoryDropDown class="form-control">
                            <option disabled selected>--Виберіть категорію--</option>
                        </select>
                        <span asp-validation-for="CategoryId" class="text-danger"></span>
                    </div>
                </div>
                
                <div class="form-group row mt-3">
                    <div class="col-9 offset-2 row">
                        <div class="col">
                            <button type="submit" class="btn btn-outline-primary w-100">Додати</button>
                        </div>
                        <div class="col">
                            <a asp-action="Index" class="btn btn-outline-secondary w-100">Назад <i class="fa-solid fa-right-from-bracket"></i></a>
                        </div>
                    </div>
                </div>
                
