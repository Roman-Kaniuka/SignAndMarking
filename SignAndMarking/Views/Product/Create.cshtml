                        <input asp-for="Price" class="form-control">
                        <span asp-validation-for="Price" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row mt-3">
                    <div class="col-5">
                        <label asp-for="Description" class="h5">Повний опис</label>
                    </div>
