            <h2 class="text-primary">Додати товар</h2>
        </div>
        <div class="row">
            <div class="col-8">
                <div class="form-group row mt-3">
                    <div class="col-5">
                        <label asp-for="Name" class="h5">Назва</label>
                    </div>
                    <div class="col-7">
                        <input asp-for="Name" class="form-control"/>
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row mt-3">
                    <div class="col-5">
                        <label asp-for="Price" class="h5">Ціна</label>
