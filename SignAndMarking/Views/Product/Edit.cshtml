@model SignAndMarking.Models.ViewModels.ProductVM

<form method="post" asp-action="Edit" enctype="multipart/form-data">
    <input asp-for="Product.Id" hidden />
    <div class=" border p-3">
        <div class="form-group row">
            <h2 class="text-primary">Редагувати товар</h2>
        </div>
        <div class="row">
            <div class="col-8">
                <div class="form-group row mt-3">
                    <div class="col-5">
                        <label asp-for="Product.Name" class="h5">Назва</label>
                    </div>
                    <div class="col-7">
                        <input asp-for="Product.Name" class="form-control"/>
                        <span asp-validation-for="Product.Name" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row mt-3">
                    <div class="col-5">
                        <label asp-for="Product.Price" class="h5">Ціна</label>
                    </div>
                    <div class="col-7">
                        <input asp-for="Product.Price" class="form-control">
                        <span asp-validation-for="Product.Price" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row mt-3">
                    <div class="col-5">
                        <label asp-for="Product.Description" class="h5">Повний опис</label>
                    </div>
                    <div class="col-7">
                        <textarea asp-for="Product.Description" class="form-control summernote" ></textarea>
                        <span asp-validation-for="Product.Description" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row mt-3">
                    <div class="col-5">
                        <p class="h5">Image</p>
                    </div>
                    <div class="col-7">
                        <input type="file" name="files" multiple class="form-control" />
                    </div>
                </div>

                <div class="form-group row mt-3">
                    <div class="col-5">
                        <label asp-for="Product.CategoryId" class="h5">Категорія</label>
                    </div>
                    <div class="col-7">
                        <select asp-for="Product.CategoryId" asp-items=@Model.CategorySelectList class="form-control">
                            <option disabled selected>--Виберіть категорію--</option>
                        </select>
                        <span asp-validation-for="Product.CategoryId" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row mt-3">
                    <div class="col-9 offset-2 row">
                        <div class="col">
                            <button type="submit" onclick="return validateInput()" class="btn btn-outline-primary w-100">Редагувати</button>
                        </div>
                        <div class="col">
                            <a asp-action="Index" class="btn btn-outline-secondary w-100">Назад <i class="fa-solid fa-right-from-bracket"></i></a>
                        </div>
                    </div>
                </div>

            </div>
            <div class="col-4">
                <img src="@WC.ImagePath@Model.Product.Image" width="100%" style="border-radius:5px; border:1px solid #bbb">
            </div>
        </div>

    </div>
</form>
@section Scripts
{
    
     @{
           <partial name="_ValidationScriptsPartial" />
       }
<script>

 $(document).ready(function () {
     $('.summernote').summernote({
         toolbar: [
             // [groupName, [list of button]]
             ['style', ['bold', 'italic', 'underline', 'clear']],
             ['font', ['strikethrough', 'superscript', 'subscript']],        
             ['color'],
             ['para', ['ul', 'ol',]],
                        
           ],
            height:250
     });
 });

</script>
}
